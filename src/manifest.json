{
	"manifest_version": 3,
	"name": "ORAC+",
	"version": "0.4",
	"description": "Utility browser extension for ORAC",
	"permissions": ["storage"],
	"content_scripts": [
		{
			"matches": ["*://orac2.info/hub/personal/", "*://orac.amt.edu.au/hub/personal/"],
			"js": ["common/oracPlus.js", "common/hofCounter.js", "problemList.js"],
			"css": ["styles/hofCountBadge.css"]
		},
		{
			"matches": ["*://orac2.info/problem/*", "*://orac.amt.edu.au/problem/*"],
			"js": ["common/oracPlus.js", "common/hofCounter.js", "problemStatement.js"],
			"css": ["styles/hofCountBadge.css"]
		},
		{
			"matches": ["*://orac2.info/problem/*/submission/*", "*://orac2.info/problem/*/hof/*", "*://orac.amt.edu.au/problem/*/submission/*", "*://orac.amt.edu.au/problem/*/hof/*"],
			"js": ["submission.js"]
		}
	],
	"action": {
		"default_popup": "toolbarMenu.html",
		"default_title": "ORAC+ Settings",
		"default_icon": {
			"16": "assets/logo_16x16.png",
			"32": "assets/logo_32x32.png",
			"64": "assets/logo_64x64.png"
		}
	},
	"icons": {
		"48": "assets/logo_48x48.png",
		"96": "assets/logo_96x96.png"
	}
}